<odoo>
  <record id="project_issue_form_view_extend" model="ir.ui.view">
    <field name="name">project_issue_form_view_extend</field>
    <field name="model">project.issue</field>
    <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='description']" position="replace">
        <field name="description" placeholder="Add an internal note..." type="html" groups="base.group_user"/>
      </xpath>
      <xpath expr="//div[@class='oe_button_box']" position="inside">
        <button class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-files-o">
          <field string="Documents" name="issue_attachment" widget="statinfo"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>