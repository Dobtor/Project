<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="project_issue_form_view_extend" model="ir.ui.view">
            <field name="name">project_issue_form_view_extend</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header/field[@name='stage_id']" position="before">
                    <field name="is_serial" invisible="1" />
                    <button name="action_serial" string="Get Serial" type="object" attrs="{'invisible': [('is_serial','=',True)]}"/>
                    <button name="action_create_subissue" string="Sub Issue" type="object"/>
                </xpath>
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-files-o">
                        <field string="Documents" name="attachment_number" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" name="action_subissue_tree_view" type="object" icon="fa-bug" attrs="{'invisible': [('subissue_number', '=', 0)]}">
                        <field string="Subissue" name="subissue_number" widget="statinfo"/>
                    </button>
                </xpath>
                <!-- Content -->
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="class">oe_read_only</attribute>
                </xpath>
                <xpath expr="//div[@class='oe_title']" position="inside">
                    <h1>
                        <field name="topic" placeholder="Issue Summary..." class="oe_edit_only"/>
                    </h1>
                </xpath>
                <xpath expr="//field[@name='description']" position="replace">
                    <field name="description" placeholder="Add an internal note..." type="html" groups="base.group_user"/>
                </xpath>
                <!-- Sub Issue -->
                <xpath expr="//group//field[@name='tag_ids']" position="after">
                    <field name="main_id"/>
                </xpath>
            </field>
        </record>

